#!/bin/bash

# Check if the environment variable PYFILE is set
if [ -z "$PYFILE" ]; then
    echo "PYFILE environment variable not set"
    exit 1
fi

# Compile the Python file
python3 -m py_compile "$PYFILE"

# Rename the compiled file to have a .pyc extension
if [ -f "${PYFILE}c" ]; then
    mv "${PYFILE}c" "${PYFILE}c"
else
    echo "Error compiling $PYFILE"
    exit 1
fi
